<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HIGH PAPER</title>
</head>
<body>
    <%- include('templates/vw_encabezadoGeneral', {login: isLogin}) %>

    <% if(producto[0].sNombre != undefined){ %>

      <form id="addcarritoform001" method="post">

        <div class="row" style="width: 100%;">
            <div class="col-5" style="padding: 0px;">
              <!-- CARRUSEL  -->

              <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel" style="width: 50%; margin: 20px auto;">
                <div class="carousel-inner">
                    <% producto[0].aFotos.forEach((fotoSRC)=>{ %>
                        <div class="carousel-item active" data-bs-interval="10000">
                            <img src="<%= fotoSRC %>" class="d-block w-100" alt="...">
                    </div>
                    <% }) %>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
              </div>


            </div>

            <div class="col-6" style="padding: 0px;">
              <div class="card" style="margin-top: 20px;">
                <div class="card-header">
                  Detalles del producto
                </div>
                <div class="card-body">
                  <h5 class="card-title"><%= producto[0].sNombre %></h5>
                  <p class="card-text"><%= producto[0].sDescripcion %></p>

                  <input type="text" name="sNombreP" id="" value="<%= producto[0].sNombre %>" style="display: none;">

                  <input type="text" name="sIdP" id="" value="<%= producto[0]._id %>" style="display: none;">

                  <input type="text" name="sFotoP" id="" value="<%= producto[0].aFotos[0] %>" style="display: none;">
        
                  <p class="card-text"><span style="font-weight: bold;">Total en existencia: </span><%= producto[0].iCantidadExistencia %></p>
                  <p class="card-text"><span style="font-weight: bold;">Precio: </span><%= producto[0].iPrecio %></p>

                  <input type="text" name="sPrecioP" id="" value="<%= producto[0].iPrecio %>" style="display: none;">
                  
                  <% if(isLogin){ %>
                    <input type="number" name="sCantidad" id="" min="1" max="<%= producto[0].iCantidadExistencia %>" value="1" style="float: right; width: 80px;">
                    <button type="submit" class="btn btn-primary">Añadir al carrito</button>
                  <% }else{ %>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" style="float: right;">
                      Inicia sesión para añadir a tu carrito
                    </button>
                    <% } %>
                  <div style="clear: both;"></div>
                  <p>Características del producto</p>
                  <div class="row">

                    <ul class="list-group col-12">

                      <% producto[0].aCaracteristicas.forEach((objeto) => { %>
                          <% if(objeto.sValor  != null && objeto.sValor != ""){ %>
                            <div class="input-group mb-3">
                              <span class="input-group-text" id="inputGroup-sizing-default"><%= objeto.sCaracteristica  %></span>
                              <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" value="<%= objeto.sValor  %>" disabled>
                            </div>
                          <% } %>
                          <% }); %>

                      </ul>
                    </div>
          
                  </div>
                </div>

            </div>
            
          </div>

    </form>

    <% }else{ %>
      <h1>Producto no encontrado</h1>
      <% } %>

  <div style="margin-top: 100px;"></div>

<script src="\assets\js\additemcarritocompra.js"></script>


    <%- include('templates/vw_footerGeneral') %>
</body>
</html>