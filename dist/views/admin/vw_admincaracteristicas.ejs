<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Caracteristicas</title>
</head>
<body onload="miFuncion(<%= JSON.stringify(caracteris) %>)">
    <%- include('../templates/vw_encabezadoAdmin') %>


      <div class="table-responsive" style="width: 80%; margin: 20px auto;">
        <table class="table table-striped table-bordered" id="miTabla">
          <thead>
            <tr>
                <th>Característica</th>
                <th>Acciones</th>
              <!-- Agrega más columnas aquí -->
            </tr>
          </thead>
          <tbody>
            <!-- Los datos consultados se agregarán aquí dinámicamente -->
          </tbody>
        </table>
      </div>
    

      <br>
      <br>

      <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
      <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
      <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap5.min.js"></script>

        <!-- Bloque de script para definir dataVerdad -->
  <script>
    // Declarar dataVerdad en el contexto global y asignar su valor

    // Inicializar la tabla con DataTables
    function miFuncion(dataVerdad) {
      const tabla = $("#miTabla").DataTable({
        data: dataVerdad, // Pasar el arreglo de objetos como fuente de datos
        columns: [
          { data: "sCaracteristica" }, // Columna "iActTiempoLibre"
          {
          // Nueva columna "Editar"
          data: null,
          render: function (data, type, row) {
            // Generar el enlace a la ruta de edición con el ID del producto como parámetro
            return `<a href="/admin/editarcaracteristica/` + data._id + `" style="text-decoration: none; color: black; margin: 0px 5px;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                        </svg>
                    </a>
                    

                      <button type="button" data-bs-toggle="modal" data-bs-target="#exampleModal` + data.sCaracteristica + `" style="border: none;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                        </svg>
                      </button>



                    <div class="modal fade" id="exampleModal` + data.sCaracteristica + `" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Advertencia</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            ¿Estás seguro que deseas eliminar la característica?
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">
                              <a href="/admin/eliminarcaracteristica/` + data._id + `/` + data.sCaracteristica + `" style="color:#FFF; text-decoration: none;">Eliminar</a></button>
                          </div>
                        </div>
                      </div>
                    </div>

                    `;
          },
        },
          // Agrega más columnas aquí, si es necesario
        ],
        // Otras opciones y configuraciones de DataTables
      });
    };
  </script>


    <%- include('../templates/vw_footerGeneral') %>
</body>
</html>