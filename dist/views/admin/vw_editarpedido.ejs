<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pedido</title>
</head>
<body>
    <%- include('../templates/vw_encabezadoAdmin') %>

    <% if(pedido){ %>
    
        <div style="width: 80%; margin: 20px auto">
            <% pedido.forEach((pedi) => { %>

                <div class="card" style="margin-bottom: 20px;">
                    <h5 class="card-header">Código del pedido: <b><%= pedi.sCodigoPedido %></b>
                        <span style="float: right;">Estatus: <%= pedi.sEstatus %></span></h5>
                    
                    <div class="card-body">
                        <p><b>Productos</b></p>
                        <% pedi.aProductos.forEach((prod)=>{ %>
                            <span><img src="<%= prod.sFotoProducto %>" alt="" style="width: 30px;"></span>
                            <span><%= prod.sNombreProducto %></span>
                            <p>Unidades: <%= prod.sUnidadesProducto %></p>
                        <% }) %>
                        <span style="float: right;">Total: $ <%= pedi.iTotal %> MXM</span>
                    </div>
                    
                    <div style="width: 30%; margin: 10px auto;">
                        <form action="/admin/actualizarestatuspedido" method="post">
                            Cambiar estatus a:
                            <select class="form-select" aria-label="Default select example" name="sEstatusPedido">
                                <option value="En preparación" selected>En preparación</option>
                                <option value="Listo para entregar">Listo para entregar</option>
                            </select>
                            <input type="text" value="<%= pedi._id %>" name="sIdPedido" style="display: none;">
                            <div style="text-align: center;">
                                <button type="submit" class="btn btn-success" style="width: 100px; margin: 20px auto;">Enviar</button>
                            </div>
                            
                        </form>
                    </div>

                    


                </div>

                  
        
                <% }); %>
        </div>
        
    
        
        <script src="/assets/js/categoriaeditar.js" type="module"></script>
    
        
    
        <% }else{ %>
            <h1 style="width: 200px; display: block; margin: 200px auto;">PEDIDO NO ENCONTRADO</h1>
        <% } %>


    <%- include('../templates/vw_footerGeneral') %>
</body>
</html>